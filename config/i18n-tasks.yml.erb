base_locale: en

# skip checking 'providers_hyperv' and 'synced_folder_smb' locales
locales: []

search:
  paths:
    - "lib/"
data:
  adapter: file_system
  read:
    - "locales/%{locale}.yml"
    - "<%= %x[bundle show vagrant].chomp %>/templates/locales/%{locale}.yml"
  write:
    - "locales/%{locale}.yml"
ignore_unused:
  - "vagrant_parallels.errors.*"
  - "vagrant.*"
